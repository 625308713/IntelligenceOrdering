<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/red</item>
    </style>
    <style name="MyEditText2" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/darkgray</item>
        <item name="colorControlActivated">@color/red</item>
    </style>
    <style name="common_text_1">
        <item name="android:textColor">@color/title_black</item>
        <item name="android:textSize">@dimen/text_2</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
